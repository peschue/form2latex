<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>{{site_title}} - Form Selection</title>
  <style>
    {{{commoncss}}}
  </style>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.5/jquery.min.js"></script>
  <script>
    {{{commonjs}}}
  </script>
</head>
<body>
  <h1>Stored Forms</h1>

  <h2>Existing Forms</h2>
  {{#forms}}
  <p>
		<b>{{formkey}}</b>
		(type {{formtype}})
	  {{#versions}}
		<a href="{{{prefix}}}/forms/{{formtype}}/{{formkey}}/{{version}}/edit">v{{version}}{{#isDraft}}-Draft{{/isDraft}}</a>
		{{/versions}}
	</p>
  {{/forms}}

  <h2>Create New Form</h2>

  <form action="{{{prefix}}}/forms/{{newformtype}}/create" method="get">
  <p>Name: <input type="text" name="name" /> <span class="comment">{{htmlcomment}}</span></p>
  <p><input type="submit" name="submit" value="Create new document of type {{newformtype}}" /></p>
  </form>

  <p><a href="{{{prefix}}}/logout">Logout</a></p>
</body>
</html>         
